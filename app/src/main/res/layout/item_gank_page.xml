<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <import type="com.waitou.towards.enums.GankEnum"/>

        <import type="android.text.Html"/>

        <variable
            name="position"
            type="int"/>

        <variable
            name="item"
            type="com.waitou.towards.bean.GankResultsTypeInfo"/>

    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color33white"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_home_commend"
                android:visibility="@{item.isShowTitle ? View.VISIBLE : View.GONE}"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_home_android"
                    android:tint="?attr/colorPrimary"
                    app:load="@{GankEnum.valueFrom(item.type)}"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{Html.fromHtml(@string/home_gank_title(item.type,item.who))}"
                    android:textColor="@android:color/darker_gray"
                    tools:text="来自话题"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="@{item.desc}"
                android:textColor="@color/color666666"
                android:textSize="18dp"/>

            <include
                layout="@layout/item_view_pager"
                app:adapter="@{item.bannerAdapterInfo.pagerAdapter}"
                app:visibility="@{item.bannerAdapterInfo == null ? View.GONE :View.VISIBLE}"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>