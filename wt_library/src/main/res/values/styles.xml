<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <!--指定不带ActionBar的主题-->
    <!--Theme.AppCompat.Light.NoActionBar 表示淡色主题，它会将界面的主题颜色设成淡色，陪衬颜色设置成深色-->
    <!--Theme.AppCompat.NoActionBar 表示深色主题，它会将界面的主题颜色设成深色，配村颜色设成淡色-->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->


    </style>

    <style name="AppThemePowder" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPowder</item>
        <item name="colorPrimaryDark">@color/colorPowder</item>
        <item name="colorAccent">@color/colorPowder</item>

        <item name="skin_kind_color_not">@color/colorWhite</item>
        <item name="skin_home_title_not">@color/home_title1</item>
        <item name="skin_dialog_bg_not">@color/home_title1</item>
        <item name="skin_contrast_color_not">@color/color_00bf7e</item>

    </style>

    <style name="AppThemeRed" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorRed</item>
        <item name="colorPrimaryDark">@color/colorRed</item>
        <item name="colorAccent">@color/colorRed</item>

        <item name="skin_kind_color_not">@color/colorWhite</item>
        <item name="skin_home_title_not">@color/home_title2</item>
        <item name="skin_dialog_bg_not">@color/home_title2</item>
        <item name="skin_contrast_color_not">@color/color_31c2c5</item>

    </style>

    <style name="AppThemeBlue" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryDark">@color/colorBlue</item>
        <item name="colorAccent">@color/colorBlue</item>

        <item name="skin_kind_color_not">@color/colorWhite</item>
        <item name="skin_home_title_not">@color/home_title3</item>
        <item name="skin_dialog_bg_not">@color/home_title3</item>
        <item name="skin_contrast_color_not">@color/color_ef6f26</item>
    </style>


    <style name="Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>